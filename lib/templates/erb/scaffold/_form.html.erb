<%%= form_for(@<%= singular_table_name %>) do |f| %>
  <%%= render 'error_messages', target: <%= "@#{singular_table_name}" %> %>

<%- attributes.each do |attribute| -%>
  <div class="field">
    <%%= f.label :<%= attribute.name %> %><br />
    <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
  </div>
<%- end -%>
  <div class="actions">
    <%%= f.submit %>
  </div>
<%% end %>
